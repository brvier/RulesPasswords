<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<widget id="net.khertan.rulespasswords" version="0.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>RulesPasswords</name>
  <description>
        A PasswordMaker like application : RulesPasswords generate a unique passwords from an URL and a master password, so, no need to remember this unique password.
    </description>
  <author email="khertan@khertan.net" href="http://khertan.net">Benoit HERVIER</author>
  <publisher>Benoit HERVIER</publisher>
  <icon src="resources/android/icon/drawable-xhdpi-icon.png"/>
  <content src="index.html"/>
  <access origin="*"/>
  <platform name="blackberry10">
    <rim:permissions>
      <rim:permit>read_device_identifying_information</rim:permit>
    </rim:permissions>
  </platform>
  <platform name="android">
    <icon src="resources/android/icon/drawable-ldpi-icon.png" density="ldpi"/>
    <icon src="resources/android/icon/drawable-mdpi-icon.png" density="mdpi"/>
    <icon src="resources/android/icon/drawable-hdpi-icon.png" density="hdpi"/>
    <icon src="resources/android/icon/drawable-xhdpi-icon.png" density="xhdpi"/>
    <icon src="resources/android/icon/drawable-xxhdpi-icon.png" density="xxhdpi"/>
    <icon src="resources/android/icon/drawable-xxxhdpi-icon.png" density="xxxhdpi"/>
  </platform>
</widget>